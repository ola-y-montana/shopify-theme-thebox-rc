{% capture component_class %}splitted-video-tbx-v2_{{section.id}}{% endcapture %} 

{%- if section.settings.image == blank -%}
  {% style %}
    @media screen and (max-width: 749px) {
      .video-tbx-v2-wrapper .video__image {
        opacity: 0;
      }
    }
  {% endstyle %}
{%- endif -%}
<style>
    .{{ component_class }} {
      text-align: center;
      {%- if section.settings.custom_top_spacing_mobile != blank -%}
      margin-top: {{ section.settings.custom_top_spacing_mobile }};
      {%- endif -%}
      {%- if section.settings.custom_bottom_spacing_mobile != blank -%}
      margin-bottom: {{ section.settings.custom_bottom_spacing_mobile }};
      {%- endif -%}
    }
  
    .{{ component_class }} .video-thebox {
		display: inline-block;
    }
    
    .{{ component_class }} .video-thebox-{{ section.id }} {
        padding-top: 0 !important;
        padding-bottom: 0 !important;
    }
  
  	.{{ component_class }} .title {
        font-weight: 700;
        font-size: 20px;
        line-height: 20px;
        letter-spacing: 0;
        margin-bottom: 1.2rem;
        margin: 30px auto;
    }

  	@media (min-width: 426px) {
      .{{ component_class }} {
        {%- if section.settings.custom_top_spacing != blank -%}
        margin-top: {{ section.settings.custom_top_spacing }};
        {%- endif -%}
        {%- if section.settings.custom_bottom_spacing != blank -%}
        margin-bottom: {{ section.settings.custom_bottom_spacing }};
        {%- endif -%}
      }  
    }
</style>

{% if section.settings.custom_css != blank %}
{% assign component_selector = component_class | prepend: '.' %} 
<style>
	{{ section.settings.custom_css | replace: '$component_class', component_selector }}
</style>
{% endif %}

<div class="{{ component_class }}" data-section-id="{{ section.id }}" data-section-type="video-section"
    {% if section.settings.title != blank and section.settings.show_title %} 
      <div class="title text-center">{{ section.settings.title }}</div>
    {% endif %}>
    {%- for block in section.blocks -%}
    	{% include 'video-thebox' %}
    {%- endfor -%}
</div>

{% if section.settings.custom_js != blank %}
	<script>
      function defer(method) {
        if (window.jQuery) {
          method();
        } else {
          setTimeout(function() { defer(method) }, 50);
        }
      }
      defer(function(){
        $(document).ready(function(){
      		{{ section.settings.custom_js }}
        })
      })
	</script>
{% endif %}


