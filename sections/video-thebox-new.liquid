      {
         "type":"text",
         "id":"video_link_mobile",
         "label":{
            "en":"Video link Mobile",
            "es":"Enlace de video Mobile"
         }
      },
      {
         "type":"url",
         "id":"link",
         "label":{
            "en":"Link on click",
            "es":"Enlace al hacer click"
         }
      },
      {
         "type":"image_picker",
         "id":"image",
         "label":{
            "en":"Cover image",
            "es":"Imagen de portada"
         },
         "info":{
            "en":"Always shown on desktop devices",
            "es":"Mostrar siempre dispositivos desktop"
         }
      },
      {
         "type":"image_picker",
         "id":"image_mobile",
