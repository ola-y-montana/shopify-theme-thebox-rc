
<div class="video-section-thebox-wrapper" data-section-id="{{ section.id }}">
 {% include "video-thebox" %}
</div>

{% schema %}
{
   "name":"Video Section TheBox",
   "class":"thebox-section video-section-thebox",
   "settings":[
      {
         "type":"checkbox",
         "id":"show_controls",
         "label":{
            "en":"Show Controls",
            "es":"Mostrar controles"
         },
         "default":true
      },
      {
         "type":"checkbox",
         "id":"loop",
         "label":{
            "en":"Auto Replay",
            "es":"Auto Replay"
         },
         "default":true
      },
      {
         "type":"checkbox",
         "id":"play_on_scroll",
         "label":{
            "en":"Play on Scroll",
            "es":"Autoplay al scrollear"
         },
         "default":true
      },
      {
         "type":"checkbox",
         "id":"enable_sound",
         "label":{
            "en":"Enable Sound",
            "es":" Sonido"
         },
         "default":true
      },
      {
         "type":"checkbox",
         "id":"show_title",
         "label":{
            "en":"Show Title",
            "es":"Mostrar Título"
         },
         "default":true
      },
      {
         "type":"checkbox",
         "id":"video_full_width",
         "label":{
            "en":"Full width",
            "es":"Ancho completo"
         },
         "default":true
      },
      {
         "type":"text",
         "id":"title",
         "label":{
            "en":"Heading",
            "es":"Título"
