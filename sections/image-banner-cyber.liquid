{% capture component_class %}image-banner-cyber_{{section.id}}{% endcapture %} 

<div class="{{ component_class }}">
  <{% if section.settings.link %}a href="{{section.settings.link}}"{% else %}span{% endif %} >
    <picture>
      <source srcset="{{ section.settings.image | img_url: 'master' }}" media="(min-width: 725px)">
      <source srcset="{{ section.settings.image_mobile | default: section.settings.image_mobile | img_url: 'master' }}" media="(min-width: 0)">
      <img loading="eager" src="{{ section.settings.image_mobile | img_url: 'master' }}" class="ratio-container">
    </picture>
  </{% if section.settings.link %}a{% else %}span{% endif %}>
</div>
